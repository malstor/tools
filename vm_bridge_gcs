auto lo
iface lo inet loopback

source-directory /etc/network/interfaces.d

auto eth0
iface eth0 inet static
        address 10.128.0.15
        netmask 255.255.240.0
        gateway 10.128.0.1
        up route add -net 10.128.0.0 netmask 255.255.240.0 gw 10.128.0.1 dev eth0

iface vmbr0 inet static
address 192.168.1.1
netmask 255.255.255.0
bridge_ports none
bridge_stp off
bridge_fd 0
post-up echo 1 > /proc/sys/net/ipv4/ip_forward
post-up iptables -t nat -A POSTROUTING -s '192.168.1.0/24' -o eth0 -j MASQUERADE
post-down iptables -t nat -D POSTROUTING -s '192.168.1.0/24' -o eth0 -j MASQUERADE
